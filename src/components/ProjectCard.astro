---
import Link from '@/components/Link.astro'
import { Badge } from '@/components/ui/badge'
import { getDevelopmentPeriod, getStatusInfo } from '@/lib/utils'
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'

type Props = {
  project: CollectionEntry<'projects'>
}

const { project } = Astro.props

const developmentPeriod = getDevelopmentPeriod(
  project.data.startDate,
  project.data.endDate,
)

const { variant, icon } = getStatusInfo(project.data.status)
---

<div
  class="hover:bg-secondary/50 rounded-xl border p-4 transition-colors duration-300 ease-in-out"
>
  <Link
    href={`/project/${project.id}`}
    class="flex flex-col gap-4 sm:flex-row"
  >
    {
      project.data.image && (
        <div class="max-w-[200px] sm:shrink-0">
          <Image
            src={project.data.image}
            alt={project.data.name}
            width={1200}
            height={630}
            class="rounded-xl object-cover"
          />
        </div>
      )
    }
    <div class="grow">
      <div class="flex items-center justify-between">
      <h3 class="mb-1 text-lg font-medium">
        {project.data.name}
      </h3>
      {
        project.data.status && (
          <Badge variant={variant}>
            <Icon name={icon} class="mr-1 size-3" />
            {project.data.status}
          </Badge>
        )
      }
      </div>
      <p class="text-muted-foreground mb-2 text-sm">
        {project.data.description}
      </p>
      {
        developmentPeriod && (
          <div class="mb-3 flex items-center text-xs text-muted-foreground">
            <Icon name="lucide:calendar" class="mr-1 size-3.5" />
            <span>{developmentPeriod}</span>
          </div>
        )
      }
      {
        project.data.tags && (
          <div class="flex flex-wrap gap-2">
            {project.data.tags.map((tag: string) => (
              <Badge variant="secondary">{tag}</Badge>
            ))}
          </div>
        )
      }
    </div>
  </Link>
</div>
